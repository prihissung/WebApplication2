@model Cursos.Models.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<section>
    <div class="container">
        <div class="banner"></div>
            <div class="card-body">
                <h1 class="card-title">Cronos</h1>
                <h1>Solução em Tecnologia</h1>
                <p class="card-text">Estude UX Design e aprenda técnicas para criar soluções eficazes e produtos valiosos e lucrativos para usuários e empresas.</p>
            </div>
    </div>
</section>





<h1 class="fs-1 mt-4 mb-4">CURSOS</h1>

<div class="row row-cols-1 row-cols-md-3 row-cols-sm-1 g-4">
    @foreach (var item in Model.Cursos.Take(3))
    {
        <div class="col">
            <div class="card h-100">
                <img src="@Html.DisplayFor(modelItem => item.thumbnail)" class="img-fluid rounded-start" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.resumo)</p>
                    <button class="btn btn-warning">
                        <a class="" asp-action="Details" asp-route-id="@item.Id">Veja mais</a>
                    </button>
                </div>
            </div>
        </div>
    }
</div>
<h1 class="fs-1 mt-4 mb-4">BLOG</h1>
<div id="main-content" class="blog-page">
    <div class="container ">
        <div class="row row-cols-1 row-cols-md-3 row-cols-sm-1 g-4">
            @foreach (var item in Model.Postagens.Take(3))
            {
                <div class="col">
                    <div class="card h-100">
                        <img class="d-block img-fluid img-thumbnail" src="@Html.DisplayFor(modelItem => item.imagemCapa)" alt="First slide">
                        <div class="card-body">
                            <h5 class="card-title"><a href="blog-details.html">@Html.DisplayFor(modelItem => item.tituloPost)</a></h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.conteudo)</p>
                        </div>
                        <div class="footer">
                            <div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detalhes</a>
                            </div>
                            <ul class="stats">
                                <li><a href="javascript:void(0);">General</a></li>
                                <li><a href="javascript:void(0);" class="fa fa-heart">@Html.DisplayFor(modelItem => item.gostei)</a></li>
                                <li><a href="javascript:void(0);" class="fa fa-comment">@Html.DisplayFor(modelItem => item.naoGostei)</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>