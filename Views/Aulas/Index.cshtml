@model Cursos.Models.ViewModels.AulaViewModel

@{
    ViewData["Title"] = @Model.idCurso;
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.idCurso">Cadastrar Aula do Curso @Model.idCurso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Numero Ordem
            </th>
            <th>
               Título
            <th>
               DEscrição
            </th>
            <th>
              Curso
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Aulas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.numeroOrdem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.curso.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
